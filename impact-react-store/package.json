{
  "name": "@impact-react/store",
  "version": "1.0.0",
  "description": "Reactive contexts for React",
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": "git+https://github.com/christianalfoni/impact.git",
  "module": "./dist/esm/index.js",
  "main": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/cjs/index.cjs"
    }
  },
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "dev": "tsc -p ./tsconfig.build-esm.json --watch",
    "build": "yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p ./tsconfig.build-cjs.json && node ../convert-cjs",
    "build:esm": "tsc -p ./tsconfig.build-esm.json",
    "transform": "yarn build:cjs && mv ./dist/cjs/transform.js ./dist/cjs/transform.cjs && node test",
    "clean": "rimraf ./dist",
    "typecheck": "tsc --noEmit",
    "prepublish": "yarn build"
  },
  "keywords": [
    "typescript",
    "react",
    "context",
    "reactive",
    "state",
    "global",
    "store",
    "observable"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  }
}
